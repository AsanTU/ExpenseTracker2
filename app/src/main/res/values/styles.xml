<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryVariant">@color/accent_blue</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/text_white</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="ButtonAccent">
        <item name="android:backgroundTint">@color/accent_blue</item>
    </style>

    <style name="ButtonGreen">
        <item name="android:backgroundTint">@color/green</item>
    </style>
</resources>